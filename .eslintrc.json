{
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "rules": {
      "react/prefer-stateless-function": [
        1,
        {
          "ignorePureComponents": false
        }
      ]
    },
    "plugins": ["react", "jsx-a11y"],
    "extends": ["airbnb"]
}
