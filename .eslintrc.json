{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "experimentalDecorators": true,
          "jsx": true
        }
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "rules": {
      "react/prefer-stateless-function": [
        1,
        {
          "ignorePureComponents": false
        }
      ],
      "no-trailing-spaces": 0
    },
    "plugins": ["react", "jsx-a11y"],
    "extends": ["airbnb"]
}
